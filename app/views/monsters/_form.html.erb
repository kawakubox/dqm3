<%= form_with(model: monster) do |form| %>
  <% if monster.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(monster.errors.count, "error") %> prohibited this monster from being saved:</h2>

      <ul>
        <% monster.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :lineage, style: "display: block" %>
    <%= form.select :lineage, Lineage.select_pairs %>
  </div>

  <div>
    <%= form.label :rank, style: "display: block" %>
    <%= form.select :rank, build_rank_pairs %>
  </div>

  <div>
    <%= form.label :specific_skill, style: "display: block" %>
    <%= form.collection_select :specific_skill_id, SkillGroup.all, :id, :name %>
  </div>

  <div>
    <%= form.label :level_up_pattern, style: "display: block" %>
    <%= form.collection_select :level_up_pattern_id, LevelUpPattern.all, :id, :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
